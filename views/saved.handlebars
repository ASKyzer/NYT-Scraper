<!--Saved Articles Page-->


  <div class="jumbotron jumbotron-fluid">
    <div class="text-center">
      <h1> Saved Articles</h1>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if article}}
          {{#each article}}
            <div class="panel panel-default">
              <div class="panel-heading">
                <a href={{this.link}} target="_blank"><h4>{{this.title}}</h4></a>
              </div>
              <div class="panel-body">
                <p> {{this.summary}}</p>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
              </div>
            </div>
          {{/each}}
        {{else}}
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>You haven't saved any article.</h4>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}
